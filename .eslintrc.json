{
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "import", 
    "@typescript-eslint",
    "prettier"
  ],
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "airbnb-typescript/base",
    "prettier"
  ],
  
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "project": "tsconfig.json"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "no-debugger": "off",
    "no-console": 0,
    "class-methods-use-this": "off",
    "@typescript-eslint/no-explicit-any": "error"
  },
  "ignorePatterns": [
    "dist", 
    "*.config.js"
  ]
}
